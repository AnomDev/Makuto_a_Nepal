<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/doubleMinimunDimen"
        android:layout_marginEnd="@dimen/doubleMinimunDimen"
        android:layout_marginBottom="@dimen/minimunDimen"
        android:layout_marginTop="@dimen/doubleMinimunDimen"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/post_on_feed_image_iv"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/soria" />

           <!-- <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/secondary_dark" />-->

            <TextView
                android:id="@+id/post_on_feed_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="@dimen/minimunDimen"
                android:paddingStart="@dimen/doubleMinimunDimen"
                android:text="@string/default_text"
                android:textColor="@color/secondary"
                android:textSize="@dimen/subtitleSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_on_feed_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"

                android:gravity="end"
                android:paddingEnd="@dimen/minimunDimen"
                android:paddingBottom="@dimen/minimunDimen"
                android:text="@string/default_text"
                android:textColor="@color/secondary_dark"

                android:textSize="@dimen/dateSize"
                android:textStyle="normal" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>