<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvElementTopicList"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/doubleMinimunDimen"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="left|top">

            <ImageView
                android:id="@+id/ivImageElementCountryTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/silk_sea"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/tvTitleElementCountryTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingEnd="@dimen/minimunDimen"
                android:paddingStart="@dimen/minimunDimen"
                android:paddingBottom="@dimen/minimunDimen"
                android:text="@string/app_name"
                android:textColor="@color/secondary_dark"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:textSize="@dimen/dateSize"
                android:textStyle="bold" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>